    "docs:server": "documentation serve --watch index.js --config documentation.yml",
    "server": "node server/server.js"
  },
  "dependencies": {
    "sqlite3": "^4.1.0",
    "svg2img": "^0.6.1"
  },
  "devDependencies": {
    "documentation": "^12.1.2",
    "jest": "^24.9.0"
